<h1>Lesson Submission</h1>
<br/>
<br/>
<table>
  <thead>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>User Id</td>
      <td><%= @lesson_submission.user_id %></td>
    </tr>
    <tr>
      <td>User Name</td>
      <td><%= link_to @lesson_submission.user.full_name, user_path(@lesson_submission.user)  %></td>
    </tr>
    <tr>
      <td>Lesson</td>
      <td><%= link_to @lesson_submission.lesson.name, lesson_path(@lesson_submission.lesson) %></td>
    </tr>
    <tr>
      <td>Grade</td>
       <td><%= as_percent(@lesson_submission.points_received / @lesson_submission.lesson.points_possible) %></td>
    </tr>
  </tbody>
</table>
