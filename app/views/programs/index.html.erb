<% content_for(:headline) do %>
  Programs
<% end %>

<% content_for(:headline_buttons) do %>
  <%= link_to 'New', new_program_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= link_to 'JSON', programs_path(format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<% end %>

<%= success(notice) %>

<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @programs.each do |program| %>
          <tr>
            <td><%= link_to program.name, program %></td>
            <td class="text-right smaller">
              <%= link_to 'Edit', edit_program_path(program) %> |
              <%= link_to 'Delete', program, method: :delete, data: { confirm: 'Are you sure you want to delete this Program?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
