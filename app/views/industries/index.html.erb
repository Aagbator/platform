<p id="notice"><%= notice %></p>

<h1>Industries</h1>

<div class="row">
  <div class="col-sm-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @industries.each do |industry| %>
          <tr>
            <td><%= industry.name %></td>
            <td class="text-right">
              <%= link_to 'Show', industry %> |
              <%= link_to 'Edit', edit_industry_path(industry) %> |
              <%= link_to 'Delete', industry, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Industry', new_industry_path, class: 'btn btn-primary' %>
