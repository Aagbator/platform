<% content_for(:headline) do %>
  Roles
<% end %>

<% content_for(:headline_buttons) do %>
  <%= link_to 'New', new_role_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= link_to 'JSON', roles_path(format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<% end %>

<%= success(notice) %>

<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td class="text-right smaller">
              <%= link_to 'Edit', edit_role_path(role) %> |
              <%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure you want to delete this Role?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
