<% content_for :headline do %>
  Postal Code: <%= @postal_code.code %>
<% end %>

<% content_for(:headline_buttons) do %>
  <%= link_to 'Back', postal_codes_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= link_to 'JSON', postal_code_path(@postal_code.code, format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<% end %>

<div class="row">
  <div class="col-sm-4">
    <table class="table table-sm table-striped">
      <tbody>
        <tr>
          <td><b>Location</b></td>
          <td class="text-right"><%= @postal_code.name %></td>
        </tr>
        <% [:longitude, :latitude].each do |attr| %>
          <tr>
            <td><b><%= attr.to_s.titleize %></b></td>
            <td class="text-right"><%= @postal_code.send attr %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> <!-- row -->