<% content_for :headline do %>
  From <%= @from.code %> To <%= @to.code %>:
<% end %>

<% content_for(:headline_buttons) do %>
  <%= link_to 'Back', postal_codes_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= link_to 'JSON', distance_postal_codes_path(from: @from.code, to: @to.code, format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<% end %>

<div class="row">
  <div class="col-sm-6">
    <p><b>Distance:</b> <%= pluralize(@distance, 'mile') %></p>
  </div>
</div> <!-- row -->

<div class="row">
  <div class="col-sm-4">
    <h4><%= @from.code %>:</h4>
    <%= render 'postal_code', postal_code: @from %>
  </div>

  <div class="col-sm-4">
    <h4><%= @to.code %>:</h4>
    <%= render 'postal_code', postal_code: @to %>
  </div>
</div> <!-- row -->