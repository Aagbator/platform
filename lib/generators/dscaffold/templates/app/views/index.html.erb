<%% content_for(:headline) do %>
  <%= plural_human_title %>
<%% end %>

<%% content_for(:headline_buttons) do %>
  <%%= link_to 'New', new_<%= singular_name %>_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%%= link_to 'JSON', <%= plural_name %>_path(format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<%% end %>

<%%= success(notice) %>

<div class="row">
  <div class="col-sm-6">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
          <tr>
            <td><%%= <%= singular_name %>.name %></td>
            <td class="text-right smaller">
              <%%= link_to 'Edit', edit_<%= singular_name %>_path(<%= singular_name %>) %> |
              <%%= link_to 'Delete', <%= singular_name %>, method: :delete, data: { confirm: 'Are you sure you want to delete this <%= human_title %>?' } %>
            </td>
          </tr>
        <%% end %>
      </tbody>
    </table>
  </div>
</div>
